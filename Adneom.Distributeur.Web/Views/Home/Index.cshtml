@using Adneom.Distributeur.Web.ViewModel
@model MachineViewModel
@{
    ViewData["Title"] = "Page accueil";
}

<div class="row">

</div>
<div class="main-content">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <ol class="breadcrumb breadcrumb-2">
        <li><a href="index.html"><i class="fa fa-home"></i>Home</a></li>
        <li><a asp-controller="Home" asp-action="Index">Distruputeur</a></li>
        <li class="active"><strong>Distrucupeur MVC</strong></li>
    </ol>
    <div class="row">
        <div id="loadPage">
            <div class="col-lg-12 animatedParent animateOnce z-index-47">
                <div class="panel panel-default animated fadeInUp">
                    <div class="panel-heading clearfix">
                        <h3 class="panel-title">Distrucupeur</h3>

                    </div>
                    <div class="panel-body">
                        <form method="post" class="form-horizontal">
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Boisson</label>
                                <div class="col-sm-4">
                                    <select asp-for="IdTypeBoisson"
                                            asp-items="ViewBag.ListeTypeBoisson" class="select2 form-control">
                                        <option>Sélectionnez votre boisson</option>
                                    </select>
                                    <span asp-validation-for="IdTypeBoisson" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="line-dashed"></div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Quantite de sucre</label>
                                <div class="col-sm-4">
                                    <div id="update"></div>
                                </div>
                            </div>

                            <div class="line-dashed"></div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Utiliser un mug</label>
                                <div class="col-sm-2 checkbox checkbox-replace checkbox-info">
                                    <input type="checkbox" class="col-sm-6"  style="height: 22px;" asp-for="Mug">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-3"></div>
                                <div class="col-sm-4">
                                    <input type="button" id="SaveCommande" class="btn btn-primary" value="Valider" />
                                </div>
                            </div>

                        </form>



                    </div>
                </div>
            </div>
        </div>
        <div id="load" class="hidden">
            <div class="row">
                <img src="~/images/Encours.gif" style="width: 30% ; margin-left: 25%;" />
            </div>
        </div>
    </div>
</div>

